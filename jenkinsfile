pipeline {
  agent any
  tools {
    terraform 'terraform-12'
  }

  stages {
    stage('Prepare') {
      steps {
        sh """
        terraform --version
        ./precommit-linux-install.sh
        """
      }
    }

    stage('Run test') {
      steps {
          sh """
            cd example
            terraform init
            cd ..
            pre-commit run -a
          """
      }
    }
  }
}
