pipeline {
  tools {
    terraform 'terraform-12'
  }
    environment {
        registry = "provectuslabs/swiss-army-lint"
        registryCredential = 'docker-hub-credentials'
    }

    agent {
        kubernetes {
            label 'swiss-army'
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker-client
    image: docker:19.03.1
    command:
    - sleep
    args:
    - 99d
    env:
      - name: DOCKER_HOST
        value: tcp://localhost:2375
    volumeMounts:
      - name: cache
        mountPath: /tmp/repository
  - name: docker-daemon
    image: docker:19.03.1-dind
    securityContext:
      privileged: true
    env:
      - name: DOCKER_TLS_CERTDIR
        value: ""
    volumeMounts:
      - name: cache
        mountPath: /var/lib/docker
  volumes:
    - name: cache
      hostPath:
        path: /tmp
        type: Directory
'''
        }
    }
  stages {   
    stage('Run test') {
      steps {
        container('docker-client') {
            sh "docker run -v $WORKSPACE:/usr/src/swiss -w /usr/src/swiss $registry bash -c 'cd example && terraform init && cd .. && git diff && pre-commit run -a'"
        }
      }
    }   
  }
}
